<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFA500"/> <!-- oranje/geel -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#cc8400"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffcc80"/> <!-- lichter oranje -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#cc8400"/>
        </shape>
    </item>
</selector>
