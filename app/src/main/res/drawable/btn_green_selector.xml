<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#228B22"/> <!-- groen -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#004d00"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66bb6a"/> <!-- lichter groen als uit -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#004d00"/>
        </shape>
    </item>
</selector>
