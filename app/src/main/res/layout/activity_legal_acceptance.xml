<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Logo/Title -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/grvlfinder_logo"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Welcome to GRVLFinder"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/baloo_bhaina"
            android:textColor="#2c5f2d"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Before you start cycling..."
            android:textSize="16sp"
            android:textColor="#666"
            android:layout_marginBottom="32dp"/>

        <!-- Legal Requirements Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Legal Requirements"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To use GRVLFinder, you must accept our Privacy Policy and Terms of Use. This is required by Google Play Store and GDPR regulations."
            android:textSize="14sp"
            android:textColor="#666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp"/>

        <!-- Privacy Policy Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f5f5f5"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ Privacy Policy"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2c5f2d"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ All your data stays on your device\nâ€¢ We don't collect or sell personal information\nâ€¢ Location is used only for map display\nâ€¢ Optional Strava integration with OAuth"
                android:textSize="14sp"
                android:textColor="#333"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/privacyPolicyLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“„ Read Full Privacy Policy"
                android:textSize="14sp"
                android:textColor="#2c5f2d"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <CheckBox
                android:id="@+id/privacyCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I have read and accept the Privacy Policy"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- Terms of Use Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f5f5f5"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“œ Terms of Use"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2c5f2d"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Use at your own risk while cycling\nâ€¢ Route recommendations are informational only\nâ€¢ Always verify road conditions yourself\nâ€¢ We're not liable for accidents or injuries"
                android:textSize="14sp"
                android:textColor="#333"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/termsLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“„ Read Full Terms"
                android:textSize="14sp"
                android:textColor="#2c5f2d"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <CheckBox
                android:id="@+id/termsCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I have read and accept the Terms of Use"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- Buttons -->
        <Button
            android:id="@+id/acceptButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="I Accept - Continue to App"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp"
            android:enabled="false"/>

        <Button
            android:id="@+id/declineButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Decline"
            android:textSize="14sp"
            android:background="@drawable/button_secondary"
            android:textColor="#666"/>

        <!-- Contact Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Questions? Contact: grvlfinder@gmail.com"
            android:textSize="12sp"
            android:textColor="#999"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ScrollView>