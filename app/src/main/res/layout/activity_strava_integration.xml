<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f2ead7">

    <!-- Header -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Strava Integration"
        android:textColor="#475e41"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/baloo_bhaina"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/strava"
        android:layout_marginBottom="16dp" />


    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not connected to Strava"
        android:textSize="16sp"
        android:textColor="#666"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:padding="12dp" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/loginButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Login to Strava"
            android:textColor="@android:color/white"
            android:backgroundTint="#FC4C02"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#d0b58a"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:text="Logout from Strava"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/refreshButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#d0b58a"
            android:textColor="@android:color/white"
            android:text="Refresh Routes"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="true"
        android:visibility="gone" />

    <!-- Routes List -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Public Strava Routes:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#475e41"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/routesListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:divider="#ddd"
        android:dividerHeight="1dp"
        android:textColor="#000000"
        android:padding="8dp" />

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="16dp"
        android:backgroundTint="#d0b58a"
        android:textColor="@android:color/white" />

</LinearLayout>