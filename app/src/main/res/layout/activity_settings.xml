<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2ead7"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GRVLFinder"
            android:textSize="36sp"
            android:textColor="#475e41"
            android:textStyle="bold"
            android:fontFamily="@font/baloo_bhaina"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="48dp"/>

        <!-- Legal Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Legal &amp; Privacy"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/baloo_bhaina"
            android:textColor="#475e41"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:backgroundTint="#d0b58a"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnThirdPartyLicenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Third-Party Licenses &amp; Attributions"
            android:backgroundTint="#d0b58a"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Map"
            android:backgroundTint="#475e41"
            android:textColor="@android:color/white"
            android:padding="16dp"/>

    </LinearLayout>

</ScrollView>